<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="pptik.org.mobildereklocator.MainActivity"
    tools:showIn="@layout/activity_main">

    <View
        android:id="@+id/opacityFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:alpha="0.9">
    </View>
    <TextView
        style="@style/AudioFileInfoOverlayText"
        android:gravity="center"
        android:text="Silahkan Tekan dalam keadaan darurat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:background="@drawable/emergencybuttonlayout"

        android:id="@+id/li1"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">
        <Button
            android:background="@drawable/layoutbutton"
            android:text="Help!"
            android:textSize="50dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/panic_button"
          />
    </LinearLayout>


    <TextView
        style="@style/AudioFileInfoOverlayText"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Tekan Tombol Sampai Angka Menjadi 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/li1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />
</RelativeLayout>
